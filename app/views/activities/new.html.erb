<div class="container">

  <h2>Suggest an Activity</h2>

  <p>Your activity should be fun, spontaneous, and under $30.</p>
  <div class="input_form">

    <%= form_for @activity, html: {class: 'form-horizontal'} do |f| %>

      <div class="form-group">
        <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, placeholder: "short and informative", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :blurb, "Description", class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.text_field :blurb, placeholder: "explain your activity", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :url, "URL", class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.text_field :url, placeholder: "related link (optional)", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :things_needed, "Things Needed", class: "col-sm-2 control-label"  %>
        <div class="col-sm-10">
          <%= f.text_field :things_needed, placeholder: "cost, materials, etc.", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
          </div>
        </div>

    <% end %>
  </div>
</div>
