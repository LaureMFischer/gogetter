<div class="container">
  <div class="feature-space">

    <h2>Suggest an Activity</h2>

    <div id="suggestion-instructions">
      <p>Your activity should be fun, spontaneous, and under $30 (or free!). </p>
    </div>

    <div class="input_form">

      <%= form_for @activity, html: {class: 'form-horizontal'} do |f| %>

        <div class="form-group">
          <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.text_field :name, placeholder: "short and informative", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :blurb, "Description", class: "col-sm-2 control-label"  %>
          <div class="col-sm-10">
            <%= f.text_field :blurb, placeholder: "explain your activity", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :url, "URL", class: "col-sm-2 control-label"  %>
          <div class="col-sm-10">
            <%= f.text_field :url, placeholder: "related link (optional)", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :things_needed, "Things Needed", class: "col-sm-2 control-label"  %>
          <div class="col-sm-10">
            <%= f.text_field :things_needed, placeholder: "cost, materials, etc. (optional)", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :map_code, "Map", class: "col-sm-2 control-label"  %>
          <div class="col-sm-10">
            <%= f.text_field :map_code, placeholder: "paste in google maps iframe code (optional)", class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10" id="suggestion-submit">
              <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
            </div>
          </div>

      <% end %>
    </div>
  </div>
</div>